
{% extends "base.html.twig" %}

{% block content %}

    <div class="container">
        <h4 class="text-center py-2">Liste des Patients</h4>
    
        <table class="table table-striped table-hover">
        <thead>
            <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Adresse</th>
            <th scope="col">Téléphone</th>
            <th scope="col">Age</th>
            <th scope="col">Actions</th>

            </tr>
        </thead>
        <tbody id="patientList">
            {% for patient in patients %}
                <tr>
                    <td>{{ patient.id }}</td>
                    <td>{{ patient.nomPatient }}</td>
                    <td>{{ patient.adressePatient }}</td>
                    <td>{{ patient.telephonePatient }}</td>
                    <td>{{ patient.age }}</td>
                    <td>
                        <a href="{{ path('patient_show', {'id': patient.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                        <a href="{{ path('patient_edit', {'id': patient.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </tbody>
        </table>

        <a href="{{ path('patient_new') }}"><i class="fa fa-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter un nouveau patient</i></a>
    </div>
{% endblock %}
