{% extends 'base.html.twig' %}

{% block title %}Patient{% endblock %}

{% block content %}
    <div class="container py-2">
    
        <h4 class="text-center">Informations Patient</h4>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ patient.id }}</td>
                </tr>
                <tr>
                    <th>NomPatient</th>
                    <td>{{ patient.nomPatient }}</td>
                </tr>
                <tr>
                    <th>AdressePatient</th>
                    <td>{{ patient.adressePatient }}</td>
                </tr>
                <tr>
                    <th>TelephonePatient</th>
                    <td>{{ patient.telephonePatient }}</td>
                </tr>
                <tr>
                    <th>Age</th>
                    <td>{{ patient.age }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('patient_index') }}"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a>

        <a href="{{ path('patient_edit', {'id': patient.id}) }}">Modifier</a>

        {{ include('patient/_delete_form.html.twig') }}
    </div>
{% endblock %}
