{% extends 'base.html.twig' %}

{% block title %}Service index{% endblock %}

{% block content %}
    <h4 class="text-center py-2">Liste des Services</h4>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom Service</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.nomService }}</td>
                <td>
                    <a href="{{ path('service_show', {'id': service.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('service_edit', {'id': service.id}) }}"><i class="fas fa-user-edit text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_new') }}"><i class="fa fa-user-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter un nouveau service</i></a>
{% endblock %}
