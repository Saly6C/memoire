{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block service %}
    {{parent()}}
    <style type="text/css">
        .block_service { background-color: #c7c7c7}
    </style>
{% endblock %}

{% block content %}
    <div class="container py-2">
    
        <h4 class="text-center">Informations Service</h4>
        <table class="table table-hover table-bordered">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ service.id }}</td>
                </tr>
                <tr>
                    <th>NomService</th>
                    <td>{{ service.nomService }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('service_edit', {'id': service.id}) }}"><button class="btn btn-action">Modifier</button></a>

        {{ include('service/_delete_form.html.twig') }}

        {# <a href="{{ path('service_index') }}"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a> #}
        <a href="{{ path('service_index') }}" class="d-flex pb-2">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Back</h6>
        </a>
    </div>
{% endblock %}
