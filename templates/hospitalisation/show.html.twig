{% extends 'base.html.twig' %}

{% block title %}Hospitalisation{% endblock %}

{% block content %}
    <div class="container py-2">
    
        <h4 class="text-center">Informations Hospitalisation</h4>

        <table class="table table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ hospitalisation.id }}</td>
                </tr>
                <tr>
                    <th>Date Hospitalisation</th>
                    <td>{{ hospitalisation.dateHospitalisation ? hospitalisation.dateHospitalisation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Date Sortie</th>
                    <td>{{ hospitalisation.dateSortie ? hospitalisation.dateSortie|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Chambre</th>
                    <td>{{ hospitalisation.chambre }}</td>
                </tr>
                <tr>
                    <th>Nom patient</th>
                    <td>{{ hospitalisation.patient }}</td>
                </tr>
                <tr>
                    <th>Nom Demandeur</th>
                    <td>{{ hospitalisation.nomDemandeur }}</td>
                </tr>
                <tr>
                    <th>Type de pièce du Malade</th>
                    <td>{% for item in hospitalisation.pieceDuMalade %}
                        {{item}}
                    {% endfor %}</td>
                </tr>
                <tr>
                    <th>Type de pièce du demandeur</th>
                    <td>{% for item in hospitalisation.pieceDuDemandeur %}
                        {{ item }}
                    {% endfor %}</td>
                </tr>
                <tr>
                    <th>Numéro de pièce du malade</th>
                    <td>{{ hospitalisation.numeroPieceMalade }}</td>
                </tr>
                <tr>
                    <th>Numéro de pièce du demandeur</th>
                    <td>{{ hospitalisation.numeroPieceDemandeur }}</td>
                </tr>
            </tbody>
        </table>

        
        <a href="{{ path('hospitalisation_edit', {'id': hospitalisation.id}) }}">
            <button class="btn btn-action">Modifier</button>
        </a>
        {{ include('hospitalisation/_delete_form.html.twig') }}
        {# <a href="{{ path('hospitalisation_index') }}"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a> #}
        <a href="{{ path('hospitalisation_index') }}" class="d-flex pb-2">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Back</h6>
        </a>
    </div>
{% endblock %}
