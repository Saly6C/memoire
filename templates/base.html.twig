                        <span class="col-1"><i class="test fas fa-angle-right"></i></span>
                    </div>
                    <!-- Dossier Patient -->
                    <div class="d-flex border-bottom py-2 dossierPatient">
                        <span class="col-1"><i class="fas fa-address-book"></i></span>
                        <div class="col-9">Dossier Patient
                            <div class="" id="operationsDossierPatient">
                                <div>
                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                    <a href="#" class="text-white"> Ajouter</a> 
                                </div>
                                <div>
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    <a href="#" class="text-white"> Lister</a>
                                </div>
                            </div>
                        </div>
                        <span class="col-1"><i class="test fas fa-angle-right"></i></span>
                    </div>
                    <!-- Patient -->
                    <div class="d-flex border-bottom py-2 patient">
                        <span class="col-1"><i class="fas fa-users"></i></span>
                        <div class="col-9">Patient
                            <div class="" id="operationsPatient">
                                <div>
                                    <i class="fa fa-plus-circle" aria-hidden="true"></i>
                                    <a href="#" class="text-white"> Ajouter</a> 
                                </div>
                                <div>
                                    <i class="fa fa-list" aria-hidden="true"></i>
                                    <a href="#" class="text-white"> Lister</a>
                                </div>
                            </div>
                        </div>
                        <span class="col-1"><i class="test fas fa-angle-right"></i></span>
                    </div>
                    <!-- Parametres -->
                    <div class="d-flex border-bottom py-2 parametre">
                        <span class="col-1"><i class="fas fa-cogs"></i></span>
                        <div class="col-9">Paramètres
                            <div class="" id="operationsParametre">
                                <div>
                                    <i class="fas fa-user-edit" aria-hidden="true"></i>
                                    <a href="#" class="text-white"> Modifier profile</a> 
                                </div>
                            </div>
                        </div>
                        <span class="col-1"><i class="test fas fa-angle-right"></i></span>
                    </div>
                    <!-- connexion -->
                    <div class="d-flex py-2">
                        <span class="col-1"><i class="fas fa-sign-out-alt"></i></span>
                        <span class="col-10">Se déconnecter</span>
                    </div>
