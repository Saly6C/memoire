<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Ma Clinique{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
        {% block stylesheets %}{% endblock %}
    </head>
    <body>
   
    <div class="container py-3 mt-2 bgc-contenu">
        <!-- header -->
        <div class=" d-flex text-white py-2 rounded-lg banner">
            <div class="d-flex col-8 align-items-center pl-0">
                <i class="fas fa-clinic-medical pl-1 pr-2"></i>
                <span class="font-weight-bold">MaClinique</span>
            </div>
            <div class="d-flex col-4 float-right justify-content-center align-items-center">
                <input class="form-control mr-sm-2" type="search" placeholder="Rechercher" aria-label="Search" text-right="">  
                <button class="btn" type="submit"><i class="fas fa-search" aria-hidden="true"></i></button>
            </div>
        </div>
        <!-- content -->
        <div class="d-flex mt-3">
            <!-- left menu -->
            <div class="col-3 col-md-4 col-lg-3 col-sm-5 pl-0">         
                <div class="d-flex flex-column text-white rounded-lg menu">
                    <div class="profile">
                        <img src="../images/user-default.jpg" alt="user-img" class="img-fluid rounded-circle p-5">
                    </div>
                    <!-- Consultation -->
                    <div class="d-flex border-bottom py-2">
                        <span class="col-1"><i class="fas fa-user-md"></i></span>
                        <span class="col-9">Consultation</span>
                        <span class="col-1"><i class="fas fa-angle-right"></i></span>
                        
                    </div>
                    <!-- Hospitalisation -->
                    <div class="d-flex border-bottom py-2">
                        <span class="col-1"><i class="fas fa-bed"></i></span>
                        <span class="col-9">Hospitalisation</span>
                        <span class="col-1"><i class="fas fa-angle-right"></i></span>
                    </div>
                    <!-- Dossier Patient -->
                    <div class="d-flex border-bottom py-2">
                        <span class="col-1"><i class="fas fa-address-book"></i></span>
                        <span class="col-9">Dossier Patient</span>
                        <span class="col-1"><i class="fas fa-angle-right"></i></span>
                    </div>
                    <!-- Patient -->
                    <div class="d-flex border-bottom py-2">
                        <span class="col-1"><i class="fas fa-users"></i></span>
                        <span class="col-9">Patient</span>
                        <span class="col-1"><i class="fas fa-angle-right"></i></span>
                    </div>
                    <!-- Parametres -->
                    <div class="d-flex border-bottom py-2">
                        <span class="col-1"><i class="fas fa-cogs"></i></span>
                        <span class="col-9">Paramètres</span>
                        <span class="col-1"><i class="fas fa-angle-right"></i></span>
                    </div>
                    <!-- connexion -->
                    <div class="d-flex py-2">
                        <span class="col-1"><i class="fas fa-sign-out-alt"></i></span>
                        <span class="col-10">Se déconnecter</span>
                    </div>
                </div>
            </div>
            <!-- right content -->
            <div class="col-9 col-md-8 col-lg-9 col-sm-7 px-0">
                <div class="bg-success">

                </div>
            </div>
        </div>
        <span class=" bg-primary" id="menu-consultation">
                hello world
            </span>
        <div class="d-flex text-white py-2 mt-3 pl-3 rounded-lg footer">
            Copyright © Saly6C 2019, All rights reserved
        </div>
    </div>
    {% block body %}{% endblock %}
    {% block javascripts %}{% endblock %}
  
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/7e41c2f8e4.js" crossorigin="anonymous"></script>
    <script src="/js/clinique.js"></script>
    </body>
</html>
