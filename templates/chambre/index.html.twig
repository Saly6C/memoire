{% extends 'base.html.twig' %}

{% block title %}Chambre index{% endblock %}

{% block content %}
    
    <h4 class="text-center py-2">Liste des Chambres</h4>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom Chambre</th>
                <th scope="col">Nombre de Place</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for chambre in chambres %}
            <tr>
                <td>{{ chambre.id }}</td>
                <td>{{ chambre.nomChambre }}</td>
                <td>{{ chambre.nbrPlace }}</td>
                <td>
                    <a href="{{ path('chambre_show', {'id': chambre.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('chambre_edit', {'id': chambre.id}) }}"><i class="fas fa-bed text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('chambre_new') }}"><i class="fa fa-user-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter une nouvelle chambre</i></a>
{% endblock %}
