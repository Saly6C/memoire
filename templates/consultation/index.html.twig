{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block body %}
    <h1>Consultation index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateConsultation</th>
                <th>Diagnostic</th>
                <th>ProchainRV</th>
                <th>Autre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.dateConsultation ? consultation.dateConsultation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ consultation.diagnostic }}</td>
                <td>{{ consultation.prochainRV }}</td>
                <td>{{ consultation.autre }}</td>
                <td>
                    <a href="{{ path('consultation_show', {'id': consultation.id}) }}">show</a>
                    <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('consultation_new') }}">Create new</a>
{% endblock %}
