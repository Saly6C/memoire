{% extends 'base.html.twig' %}

{% block title %}Consultation index{% endblock %}

{% block content %}
    
    <h4 class="text-center py-2">Liste des Consultations</h4>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Date Consultation</th>
                <th scope="col">Diagnostic</th>
                <th scope="col">Prochain RV</th>
                <th scope="col">Autre</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for consultation in consultations %}
            <tr>
                <td>{{ consultation.id }}</td>
                <td>{{ consultation.dateConsultation ? consultation.dateConsultation|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ consultation.diagnostic }}</td>
                <td>{{ consultation.prochainRV }}</td>
                <td>{{ consultation.autre }}</td>
                <td>
                    <a href="{{ path('consultation_show', {'id': consultation.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('consultation_edit', {'id': consultation.id}) }}"><i class="fas fa-bed text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('consultation_new') }}"><i class="fa fa-user-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter une nouvelle consultation</i</a>
{% endblock %}
