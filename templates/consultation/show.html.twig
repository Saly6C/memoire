{% extends 'base.html.twig' %}

{% block title %}Consultation{% endblock %}

{% block content%}
    <h1>Consultation</h1>
    <div class="container py-2">
        <h4 class="text-center">Informations Consultation</h4>
        
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ consultation.id }}</td>
                </tr>
                <tr>
                    <th>DateConsultation</th>
                    <td>{{ consultation.dateConsultation ? consultation.dateConsultation|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Diagnostic</th>
                    <td>{{ consultation.diagnostic }}</td>
                </tr>
                <tr>
                    <th>ProchainRV</th>
                    <td>{{ consultation.prochainRV }}</td>
                </tr>
                <tr>
                    <th>Autre</th>
                    <td>{{ consultation.autre }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('consultation_index') }}"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a>

        <a href="{{ path('consultation_edit', {'id': consultation.id}) }}">Modifier</a>

        {{ include('consultation/_delete_form.html.twig') }}
    </div>
{% endblock %}
