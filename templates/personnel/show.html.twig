{% extends 'base.html.twig' %}

{% block title %}Personnel{% endblock %}

{% block personnel %}
    {{parent()}}
    <style type="text/css">
        .block_personnel { background-color: #c7c7c7}
    </style>
{% endblock %}

{% block content %}
    <div class="container py-2">
    
        <h4 class="text-center">Informations Personnel</h4>

        <table class="table table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ personnel.id }}</td>
                </tr>
                <tr>
                    <th>Fonction</th>
                    <td>{{ personnel.fonction }}</td>
                </tr>
                <tr>
                    <th>AdressePersonnel</th>
                    <td>{{ personnel.adressePersonnel }}</td>
                </tr>
                <tr>
                    <th>TelephonePersonnel</th>
                    <td>{{ personnel.telephonePersonnel }}</td>
                </tr>
                <tr>
                    <th>NomPersonnel</th>
                    <td>{{ personnel.nomPersonnel }}</td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('personnel_edit', {'id': personnel.id}) }}">
            <button class="btn btn-action">Modifier</button>
        </a>

        {{ include('personnel/_delete_form.html.twig') }}

        {# <a href="{{ path('personnel_index') }}"><i class="fa fa-arrow-left" aria-hidden="true">Back</i></a> #}
        <a href="{{ path('personnel_index') }}" class="d-flex pb-2">
            <i class="fa fa-arrow-left" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Back</h6>
        </a>
     </div>
{% endblock %}
