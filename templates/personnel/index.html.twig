{% extends 'base.html.twig' %}

{% block title %}Personnel index{% endblock %}

{% block content %}
    <div class="container">
        <h4 class="text-center py-2">Liste des Personnels</h4>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Fonction</th>
                    <th scope="col">Adresse</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Service</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody id="personnelList">
            {% for personnel in personnels %}
                <tr>
                    <td>{{ personnel.id }}</td>
                    <td>{{ personnel.fonction }}</td>
                    <td>{{ personnel.adressePersonnel }}</td>
                    <td>{{ personnel.telephonePersonnel }}</td>
                    <td>{{ personnel.nomPersonnel }}</td>
                    <td>{{ personnel.service }}</td>
                    <td>
                        <a href="{{ path('personnel_show', {'id': personnel.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                        <a href="{{ path('personnel_edit', {'id': personnel.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('personnel_new') }}" class="d-flex pb-2">
            <i class="fa fa-plus text-dark" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Ajouter un nouveau personnel</h6>
        </a>
    </div>
{% endblock %}
