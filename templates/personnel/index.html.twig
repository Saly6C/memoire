{% extends 'base.html.twig' %}

{% block title %}Personnel index{% endblock %}

{% block content %}

    <h4 class="text-center py-2">Liste des Personnels</h4>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Fonction</th>
                <th scope="col">AdressePersonnel</th>
                <th scope="col">TelephonePersonnel</th>
                <th scope="col">NomPersonnel</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personnel in personnels %}
            <tr>
                <td>{{ personnel.id }}</td>
                <td>{{ personnel.fonction }}</td>
                <td>{{ personnel.adressePersonnel }}</td>
                <td>{{ personnel.telephonePersonnel }}</td>
                <td>{{ personnel.nomPersonnel }}</td>
                <td>
                    <a href="{{ path('personnel_show', {'id': personnel.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('personnel_edit', {'id': personnel.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('personnel_new') }}"><i class="fa fa-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter un nouveau personnel</i></a>
{% endblock %}
