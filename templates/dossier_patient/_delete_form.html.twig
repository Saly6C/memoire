<form method="post" action="{{ path('dossier_patient_delete', {'id': dossier_patient.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier_patient.id) }}">
    <button class="btn btn-primary btn-action my-2">Supprimer</button>
</form>
