{% extends 'base.html.twig' %}

{% block content %}
{{dump()}}
    <h4 class="text-center py-2">Liste des dossiers Patients</h4>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">NomPatient</th>
                <th scope="col">NomMaladie</th>
                <th scope="col">Antecedant</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for dossier_patient in dossier_patients %}
            <tr>
                <td>{{ dossier_patient.id }}</td>
                <td>{{ dossier_patient.patient.nomPatient }}</td>
                <td>{{ dossier_patient.nomMaladie }}</td>
                <td>{{ dossier_patient.antecedant }}</td>
                <td>
                    <a href="{{ path('dossier_patient_show', {'id': dossier_patient.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                    <a href="{{ path('dossier_patient_edit', {'id': dossier_patient.id}) }}"><i class="fas fa-user-edit text-dark"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('dossier_patient_new') }}"><i class="fa fa-user-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter un nouveau dossier</i></a>
{% endblock %}
