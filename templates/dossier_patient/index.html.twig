{% extends 'base.html.twig' %}

{% block content %}
    <div class="container">
        <h4 class="text-center py-2">Liste des dossiers Patients</h4>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Nom Patient</th>
                    <th scope="col">Nom Maladie</th>
                    <th scope="col">Antécédant</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody id="dossierPatientList">
            {% for dossier_patient in dossier_patients %}
                <tr>
                    <td>{{ dossier_patient.id }}</td>
                    <td>{{ dossier_patient.patient.nomPatient }}</td>
                    <td>{{ dossier_patient.nomMaladie }}</td>
                    <td>{{ dossier_patient.antecedant }}</td>
                    <td>
                        <a href="{{ path('dossier_patient_show', {'id': dossier_patient.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                        <a href="{{ path('dossier_patient_edit', {'id': dossier_patient.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    
        <a href="{{ path('dossier_patient_new') }}" class="d-flex pb-2">
            <i class="fa fa-plus text-dark" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Ajouter un nouveau dossier</h6>
        </a>
    </div>
{% endblock %}
