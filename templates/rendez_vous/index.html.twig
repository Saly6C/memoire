{% extends 'base.html.twig' %}

{% block title %}RendezVous index{% endblock %}

{% block content %}
    <div class="container">
        <h4 class="text-center py-2">Liste des Rendez-Vous</h4>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Date de Rendez-Vous</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody id="rendezVousList">
            {% for rendez_vous in rendez_vouses %}
                <tr>
                    <td>{{ rendez_vous.id }}</td>
                    <td>{{ rendez_vous.dateRV ? rendez_vous.dateRV|date('Y-m-d') : '' }}</td>
                    <td>{{ rendez_vous.nomClient }}</td>
                    <td>{{ rendez_vous.email }}</td>
                    <td>
                        <a href="{{ path('rendez_vous_show', {'id': rendez_vous.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                        <a href="{{ path('rendez_vous_edit', {'id': rendez_vous.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('rendez_vous_new') }}"><i class="fa fa-plus ml-1 text-dark mb-4" aria-hidden="true">Ajouter un nouveau rendez-vous</i></a>
    </div>
{% endblock %}
