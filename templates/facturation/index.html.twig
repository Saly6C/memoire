{% extends 'base.html.twig' %}

{% block title %}Facturation index{% endblock %}

{% block facturation %}
    {{parent()}}
    <style type="text/css">
        .block_facturation { background-color: #c7c7c7}
    </style>
{% endblock %}

{% block content %}

    <div class="container">
        <h4 class="text-center py-2">Liste des Facturation</h4>

        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Montant Facture</th>
                    <th scope="col">Prise En Charge</th>
                    <th scope="col">Remise (en %)</th>
                    <th scope="col">Montant Pay√©</th>
                    <th scope="col">Nom Assurance</th>
                    <th scope="col">Hospitalisation</th>
                    <th scope="col">Consultation</th>
                    <th scope="col">actions</th>
                </tr>
            </thead>
            <tbody id="facturationList">
            {% for facturation in facturations %}
                <tr>
                    <td>{{ facturation.id }}</td>
                    <td>{{ facturation.montantFacture|number_format(0, '.', ',')~'FCFA' }}</td>
                    <td>{{ facturation.priseEnCharge ? 'Oui' : 'Non' }}</td>
                    <td>{{ facturation.remise ~'%' }}</td>
                    <td>{{ facturation.montantPaye|number_format(0, '.', ',')~'FCFA' }}</td>
                    <td>{{ facturation.nomAssurance }}</td>
                    <td>{{ facturation.hospitalisation }}</td>
                    <td>{{ facturation.consultation }}</td>
                    <td>
                        <a href="{{ path('facturation_show', {'id': facturation.id}) }}"><i class="fas fa-eye text-dark"></i></a>
                        <a href="{{ path('facturation_edit', {'id': facturation.id}) }}"><i class="fas fa-edit text-dark"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('facturation_new') }}" class="d-flex pb-2">
            <i class="fa fa-plus text-dark" aria-hidden="true"></i>
            <h6 class="ml-2 text-dark">Ajouter une nouvelle facturation</h6>
        </a>
    </div>
{% endblock %}
